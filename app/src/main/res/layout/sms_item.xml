<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5px"
        android:background="@android:color/white">
        <LinearLayout android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblPrice"
                android:textSize="20sp"
                android:text="250"/>
            <TextView
                android:layout_margin="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblCurr"
                android:textSize="20sp"
                android:text="USD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

            <TextView
                android:layout_margin="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblDate"
                android:textSize="20sp"
                android:text="24/5/18 17:05:03"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="5px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblStore"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="סופרפארם"/>

            <LinearLayout android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="צלם"
                    android:id="@+id/btnAddPic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"></TextView>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="הצג"
                    android:id="@+id/btnShowPics"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>